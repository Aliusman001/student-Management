<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="css/style.css" type="text/css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css">
</head>

<body>
   

    <section class="container formcol  formlayout">
        <h5 class="text-center text-light pt-3 ">Sign up</h5>
        <form action="/registration" method="post">
            <!-- First-Name -->
            <section>
                <label for="name" class="text-light">Name</label>
                <input type="text" id="name" name="name" autofocus autocomplete="off" required placeholder="Enter your Name" class="form-control">
            </section>
         
        
            <!-- UserName -->
            <section>
                <label for="username" class="text-light">UserName</label>
                <input type="text" id="username" name="username" required placeholder="Enter your UserName" class="form-control">
            </section>
           <% if(error!=null){ %>
                <section class="alert alert-danger mt-1"><%=error%></section>
           <% } %>
            <!-- gender -->
            <section>
                <label for="Gender" class="text-light">Gender</label><br>
                <input type="radio" id="gender" name="Gender" required value="Male"> <span class="text-light"> Male</span>
                <input type="radio" class="ml-3" name="Gender" required value="Female" id="gender"><span class="text-light ">
                    Female</span>
            </section>
            <!-- Password -->
            <section>
                <label for="password" class="text-light">Password</label>
             <section class="input-with-icon">
                <input type="password" id="password" name="password" required class="form-control">
                <i class="fas fa-eye " id="toggle-password"></i>
             </section>
             <section id="passworderror" class=" mt-2"></section>
            </section>
            <!-- Confirm Password -->
            <section>
                <label for="c_password" class="text-light">Comfirm Password</label>
                
                <section class="input-with-icon">
                    <input type="password" id="c_password" name="c_password" required class="form-control">
                    <i class="fas fa-eye" id="toggle-c_password"></i>
                 </section>


                <section id="error" class=" mt-2"></section>
                <!-- submit Button -->
                <button type="submit" id="submit" class="btn btn-block mt-2 login-btn">Sign up</button>
            </section>
        </form>
        <section class="container mt-2 d-flex justify-content-center">
            <p class="text-warning">Have An Account?</p>
            <a href="/" class="ml-3 ad">Login</a>
        </section>


    </section>
    <%-include("partials/footer"); %>